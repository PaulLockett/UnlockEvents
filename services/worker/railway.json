{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm --filter @unlock-events/worker build",
    "watchPatterns": ["/services/worker/**", "/packages/**"]
  },
  "deploy": {
    "startCommand": "pnpm --filter @unlock-events/worker start",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": -1
  }
}
